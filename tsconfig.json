{
  "compilerOptions": {
    "lib": ["es6", "es2018"],
    "module": "commonjs",
    "target": "es2018",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["reflect-metadata"],

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "declaration": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}